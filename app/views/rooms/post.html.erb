<div class="container-fiuld reservations">
    <h4 class="pb-4">登録済みルーム一覧</h4>
    <table>
        <thead>
            <tr align="center">
                <th>ルーム画像</th>
                <th>ルーム名</th>
                <th>ルーム紹介</th>
                <th>料金</th>
                <th>作成日</th>
            </tr>
        </thead>
        <tbody>
            <% @rooms.each do |room| %>
                <tr>
                    <td>
                    <%= image_tag room.photo ,class:"reservations-image" %>
                    </td>
                    <td class="posts-name"><%= link_to "#{room.room_name}", {controller: 'reservations', action: 'new', id: room.id} %></td>
                    <td class="posts-content"><%= room.introducution %></td>
                    <td class="price-icon"><%= room.total %></td>
                    <td><%= room.created_at.strftime('%Y/%m/%d %H:%M:%S')  %></td>

                </tr>
            <% end %>

        </tbody>

    </table>
</div>